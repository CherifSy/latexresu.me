@import '../variables/sizes'
@import '../variables/colors'

#top-bar
  background-color $top-bar-background-color
  position fixed
  min-width 100%
  z-index 1024
  height $top-bar-height
  box-shadow 0 2px 0 rgba(230, 230, 230, 0.8)

  .nav-item
    color $top-bar-logo-color

  .hero-brand
    font-size .85rem
    font-family Earth Orbiter Title
    letter-spacing 10px

    strong
      color $top-bar-logo-emphasis-color

  #nav-toggle
    position relative
    width 3.25rem
    cursor pointer

    &:hover
      background-color $top-bar-menu-background-color

    @media screen and (min-width: 769px)
      display none

    span
      background-color $top-bar-menu-color
      display block
      height 1px
      left 50%
      margin-left -7px
      position absolute
      top 50%
      -webkit-transition none .2s ease-out
      transition none .2s ease-out
      -webkit-transition-property background, left, opacity, -webkit-transform
      transition-property background, left, opacity, -webkit-transform
      transition-property background, left, opacity, transform
      transition-property background, left, opacity, transform, -webkit-transform
      width 15px

      &:nth-child(1)
        margin-top -6px

      &:nth-child(2)
        margin-top -1px

      &:nth-child(3)
        margin-top 4px

    &.is-active span
      &:nth-child(1)
        margin-left -5px
        -webkit-transform rotate(45deg)
        transform rotate(45deg)
        -webkit-transform-origin left top
        transform-origin left top

      &:nth-child(2)
        opacity 0

      &:nth-child(3)
        margin-left -5px
        -webkit-transform rotate(-45deg)
        transform rotate(-45deg)
        -webkit-transform-origin left bottom
        transform-origin left bottom
