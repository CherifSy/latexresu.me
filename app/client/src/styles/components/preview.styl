@import '../variables/colors'

#preview
  .row
    justify-content center
    text-align center
    margin-left 0
    margin-top 0
    width 100%

  canvas
    max-width 100% !important
    height 100% !important

  .controls
    border-radius 3px
    background oc-gray-9
    display flex
    justify-content space-between
    align-items center
    margin 0 auto
    margin-top 20px
    color oc-gray-1
    font-size 1rem
    height 35px
    max-width 100%

    .button
      height 1rem
      font-size 1.25rem
      height 35px
      background-color lighten(oc-gray-9, 10%)
      border-color lighten(oc-gray-9, 10%)
      border-radius 2px
      color white
      outline none

      &:focus
        outline none
        box-shadow none

      .icon
        height 1rem

    .download-buttons
      width 33%
      display flex
      justify-content flex-start

      .button
        font-size .6rem
        width 35%
        word-wrap break-word
        white-space normal
        color $home-text-color
        background-color lighten(oc-gray-9, 10%)
        outline none
        border none
        border-radius 0
        transition all .4s ease
        margin-right 4px

        i
          margin-right 7px

          @media screen and (max-width: 1000px)
            margin-right 0

    .page-controls
      width 33%
      max-width 33%
      display flex
      align-items center
      justify-content space-between

      button
        width 30%

      p
        text-align center
        width 40%
        height 1rem
        line-height 1rem
        display block

    .zoom-controls
      display flex
      align-items center
      justify-content flex-end
      width 33%

      button
        margin-left 5px
        width 25%

  .is-hidden-small
    @media screen and (max-width: 1000px)
      display none
