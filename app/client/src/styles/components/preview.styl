@import '../variables/colors'

#preview
  .row
    justify-content center
    text-align center
    margin-left 0
    margin-top 0
    width 100%

  canvas
    max-width 100% !important
    height 100% !important

  .download-buttons
    display flex
    margin 0 auto
    justify-content space-between

    .button
      width 49%
      color $home-text-color
      background-color oc-gray-9
      outline none
      border none
      border-radius 0
      transition all .4s ease

      @media screen and (max-width: 768px)
        font-size .75rem

      &:hover
        cursor pointer
        background-color $download-button-background-color
        color #000

      span
        width 100%

      i
        margin-right 7px

  .zoom-buttons
    display flex
    margin 0 auto
    justify-content space-between

    .button
      width 50%
      color white
      background-color oc-gray-4
      outline none
      border none
      border-radius 0
      transition all .4s ease

      @media screen and (max-width: 768px)
        font-size .75rem

      &:hover
        cursor pointer
        background-color $download-button-background-color
        color #000

      span
        width 100%

      i
        margin-right 7px

  .page-row
    border-radius 3px
    background oc-gray-5
    display flex
    justify-content space-between
    align-items center
    margin 0 auto
    color oc-black
    font-size 1rem
    height 35px
    max-width 100%

    button
      font-size 1.25rem
      height 35px
      padding 0 35px
      background-color oc-gray-4
      border-color oc-gray-4
      border-radius 0
      color white
